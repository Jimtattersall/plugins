{
  "name": "Rating",
  "extensionUrl": "https://unpkg.com/datocms-ui-extension-rating/dist/index.html",
  "fieldTypes": ["integer"],
  "sidebar": false,
  "parameters": {
    "global": [
      {
        "id": "developmentMode",
        "label": "Development mode?",
        "type": "boolean",
        "hint": "Enable development logs on the console"
      }
    ],
    "instance": [
      {
        "id": "maxRating",
        "label": "Maximum rating",
        "type": "integer",
        "required": true,
        "default": 5
      },
      {
        "id": "starsColor",
        "label": "Stars color",
        "type": "color",
        "required": true,
        "default": {
          "red": 255,
          "green": 180,
          "blue": 0,
          "alpha": 255
        }
      }
    ]
  }
}
